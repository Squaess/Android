<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.bartosz.l4.CreateTaskActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:text="@string/Tytul"
        android:textSize="20sp"
        android:layout_marginStart = "12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText

        android:labelFor="@+id/title"
        android:id="@+id/title"
        android:layout_weight="1"
        android:textSize="20sp"
        android:inputType="text"
        android:layout_marginEnd = "12sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tresc"
        android:gravity="center"/>

    <AutoCompleteTextView
        android:gravity="top|start"
        android:labelFor="@+id/tekst"
        android:id="@+id/tekst"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <com.varunest.sparkbutton.SparkButton
        android:layout_weight="0.2"
        android:id="@+id/done_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:sparkbutton_activeImage = "@mipmap/accept_img"
        app:sparkbutton_iconSize = "100sp"
        app:sparkbutton_primaryColor = "@color/spark_primary_color"
        app:sparkbutton_secondaryColor = "@color/spark_secondary_color"
        app:sparkbutton_animationSpeed = "0.7"/>

</LinearLayout>
