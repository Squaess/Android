<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bartosz.l4.MainActivity">


    <fragment
        android:layout_weight = "6"
        android:name = "layout.MyFragment"
        android:layout_width = "match_parent"
        android:layout_height = "0dp"
        android:id = "@+id/list_id" />

    <com.varunest.sparkbutton.SparkButton
        android:layout_weight = "1.5"
        android:layout_gravity = "bottom|end"
        android:id = "@+id/spark_button"
        android:layout_width = "wrap_content"
        android:layout_height = "0dp"
        app:sparkbutton_activeImage = "@mipmap/active_image"
        app:sparkbutton_iconSize = "60dp"
        app:sparkbutton_primaryColor = "@color/spark_primary_color"
        app:sparkbutton_secondaryColor = "@color/spark_secondary_color"
        app:sparkbutton_animationSpeed = "0.7"/>
</LinearLayout>
