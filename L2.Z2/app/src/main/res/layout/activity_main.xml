<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aedd.l2z2.MainActivity"
    android:orientation="vertical"
    android:paddingBottom="12dp">
    <ImageView
        tools:ignore="ContentDescription"
        android:layout_gravity="center"
        android:id="@+id/wisielec"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="12dp"
        android:background="@drawable/blank"/>
    <TextView
        android:id="@+id/zagadka"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:text="@string/zgaduj"
        android:layout_weight="1.7"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_weight="1.7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/wykorzystane"
            android:text="@string/uzyte"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/next"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:maxLines="1"
            android:enabled="false"
            android:onClick="next"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.7">
        <EditText
            android:id="@+id/guessTextField"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </EditText>
        <Button
            android:id="@+id/check"
            android:layout_weight="1"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sprawdz"
            android:onClick="check"/>
    </LinearLayout>



</LinearLayout>
